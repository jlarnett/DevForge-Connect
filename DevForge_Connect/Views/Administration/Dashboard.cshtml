@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use "_Layout.cshtml" if you have one
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <div class="container mt-5">
        <h1 class="mb-4">Admin Dashboard</h1>
        <div class="row">
            <!-- Example Widgets -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Open Projects</h5>
                            <p class="card-text">Total: 5</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Developers</h5>
                            <p class="card-text">30</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Clients</h5>
                            <p class="card-text">5</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table on the Left -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Recent Activity
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>User</th>
                                    <th>Action</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>John Doe</td>
                                    <td>Submitted Project</td>
                                    <td>2024-11-23</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Jane Smith</td>
                                    <td>Placed a Bid on Project 1</td>
                                    <td>2024-11-22</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Michael Brown</td>
                                    <td>Joined Team A</td>
                                    <td>2024-11-21</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Pie Chart on the Right -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Project Status Overview
                    </div>
                    <div class="card-body">
                        <canvas id="pieChart" width="400" height="400"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

    <!-- Chart.js Configuration -->
    <script>
        const ctx = document.getElementById('pieChart').getContext('2d');
        const pieChart = new Chart(ctx, {
            type: 'doughnut', // Use doughnut for a cleaner look
            data: {
                labels: [
                    'Storage', 'AI', 'Data Analysis', 'Communication',
                    'Web Development', 'Game Development', 'Mobile Development',
                    'IoT', 'Operating Systems', 'Network', 'Realtime'
                ],
                datasets: [{
                    label: 'Project Status',
                    data: [15, 10, 8, 12, 20, 5, 8, 7, 10, 3, 2], // Example data
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.8)', // Blue
                        'rgba(255, 99, 132, 0.8)', // Red
                        'rgba(255, 206, 86, 0.8)', // Yellow
                        'rgba(75, 192, 192, 0.8)', // Teal
                        'rgba(153, 102, 255, 0.8)', // Purple
                        'rgba(255, 159, 64, 0.8)', // Orange
                        'rgba(99, 255, 132, 0.8)', // Light Green
                        'rgba(201, 203, 207, 0.8)', // Gray
                        'rgba(255, 127, 80, 0.8)', // Coral
                        'rgba(160, 82, 45, 0.8)',  // Sienna
                        'rgba(46, 139, 87, 0.8)'   // Sea Green
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(99, 255, 132, 1)',
                        'rgba(201, 203, 207, 1)',
                        'rgba(255, 127, 80, 1)',
                        'rgba(160, 82, 45, 1)',
                        'rgba(46, 139, 87, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    tooltip: {
                        enabled: true,
                        callbacks: {
                            label: function (context) {
                                // Get the label and value
                                const label = context.label || '';
                                const value = context.raw || 0;
                                return `${label}: ${value}`;
                            }
                        }
                    },
                    legend: {
                        position: 'bottom' // Keep the legend at the bottom
                    }
                },
                cutout: '50%' // Makes it a donut chart
            }
        });



    </script>
</body>
</html>

