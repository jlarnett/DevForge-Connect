@model DevForge_Connect.Entities.ProjectSubmission

@{
    ViewData["Title"] = "Create";
}

<style>
    .container-fluid {
        padding: 2rem;
    }

    .navbar {
        height: 60px;
        padding: 0 1rem;
        margin: 0;
        background-color: #1e1e1e;
    }

    .navbar-brand, .nav-link {
        line-height: 60px;
        font-size: 1rem;
        color: #ffffff;
    }

    .navbar-collapse {
        margin: 0;
        padding: 0;
    }

    h2 {
        /*color: #ffffff;*/
        font-size: 2rem;
    }

    .chat-container {
        border: 2px solid #444;
        border-radius: 10px;
        background-color: #c6c6c6;
        color: #ffffff;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        scroll-snap-type: y mandatory;
    }

    .message {
        scroll-snap-align: end;
    }

    #experimentalChat {
        background-color: #121212;
        padding: 1rem;
        border-radius: 10px;
        color: #dcdcdc;
    }

    textarea, input {
        background-color: #282828;
        color: #ffffff;
        border: 1px solid #555;
        border-radius: 5px;
    }

    textarea:focus, input:focus {
        border-color: #007bff;
        outline: none;
    }

    button, .btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 15px;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    button:hover, .btn:hover {
        background-color: #0056b3;
    }

    .chat-popup {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 15px;
        width: 300px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .form-container {
        /*background-color: #2a2a2a;*/
        padding: 15px;
        border-radius: 10px;
        color: #fff;
    }

    .form-container input {
        width: 100%;
        margin-bottom: 10px;
    }

    .form-container button {
        width: 100%;
    }

    .open-button {
        position: fixed;
        bottom: 20px;
        right: 30px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 12px 20px;
        font-size: 14px;
        cursor: pointer;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .open-button:hover {
        background-color: #0056b3;
    }
</style>

<div class="container-fluid bg-light">
    <h2 class="text-center">Generate Project Information</h2>

    <hr />

    <form asp-action="ModifyProjectTitle">
        <div class="row">
            <div class="col-md-3 bg-primary rounded-3 me-2 p-4 shadow">
                <p class="text-light border-bottom">- Use the chatbot to flesh out project details and explore unknown tech stacks.</p>
                <p class="text-light border-bottom">- Enter as much information as possible before proceeding for better results.</p>
            </div>

            <div class="col-md-6 chat-container shadow">
                <div id="experimentalChat" class="overflow-auto" style="height: 500px;">
                </div>
                <div class="mt-3 d-flex">
                    <textarea class="form-control me-2" id="ExperimentalInput" placeholder="Type your message..."></textarea>
                    <button class="btn btn-primary" id="ExperimentalSendChat">Send</button>
                </div>
            </div>

            @Html.HiddenFor(p => p.Title)
            @Html.HiddenFor(p => p.Description)
            @Html.HiddenFor(p => p.Deadline)
            @Html.HiddenFor(p => p.Funding)
            @Html.HiddenFor(p => p.TeamId)
            @Html.HiddenFor(p => p.creatorId)
        </div>

        <div class="text-center mt-3">
            <input type="submit" value="Submit Project Idea" class="btn btn-outline-primary fw-bold" />
        </div>
    </form>
</div>

<script>

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script type="text/javascript" src="~/js/LLM_API/api.js"></script>
}
