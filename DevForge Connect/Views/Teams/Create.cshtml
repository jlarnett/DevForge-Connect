@model DevForge_Connect.Entities.Team

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Create Team</h1>

<hr />
<div class="row">
    <div class="col"></div>
    <div class="col border border-primary rounded-4 p-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary w-100"/>
            </div>
        </form>
    </div>
    <div class="col"></div>
</div>

<div>
    <a asp-action="Index">Return to Team List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
