@model DevForge_Connect.Entities.ProjectSubmission

@{
    ViewData["Title"] = "Edit";
}


<h4 class="text-center">Edit Project</h4>
<hr />
<div class="row">
    <div class="col"></div>
    <div class="col-8 border border-primary p-2 rounded-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control"/>
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funding" class="control-label"></label>
                <input asp-for="Funding" class="form-control"/>
                <span asp-validation-for="Funding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creatorId" class="control-label"></label>
                <select asp-for="creatorId" class="form-control" asp-items="ViewBag.creatorId"></select>
                <span asp-validation-for="creatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div class="col"></div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
